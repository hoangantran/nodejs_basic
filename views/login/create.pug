extends ../layout/template

block item
	div(class="row p-5 col-sm-12")
		div.col-sm-2
		div.col-sm-8
			h2 Create Account
			if errors
				each err in errors
					.alert.alert-danger= err
			form(method="post" action="/login/signup")
				.form-group
					label Name
					input#exampleInputEmail1.form-control(type='text', name="name", value= values ? values.name : "")
				.form-group
					label Username
					input#exampleInputPassword1.form-control(type='text', name='username', value= values ? values.age : "")
				.form-group
					label Password
					input#exampleInputPassword1.form-control(type='password', name='password', value= values ? values.phone : "")
				br
				button.btn.btn-primary(type='submit') Create

		
