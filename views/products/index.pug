extends ../layout/template

block item
	div(class="col-md-12 p-5 d-flex flex-row product flex-wrap")
		each product in products
			.col-md-3.p-5
				.card(style='width: 18rem;')
					img(src=product.image)
					.card-body
						h5.card-title= product.name
					p.card-text.p-2= product.price
					a.btn.btn-warning(href='/cart/addCart/' + product.id) Add Cart
		.d-flex.col-md-12
			.col-md-5
			.col-md-2
				nav(aria-label='Page navigation example')
					ul.pagination
						li.page-item
							a.page-link(href='/products?page=1') 1
						li.page-item
							a.page-link(href='/products?page=2') 2
						li.page-item
							a.page-link(href='/products?page=3') 3
			.col-md-5